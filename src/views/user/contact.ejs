        .text-center.mb-5 h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 10px;
        }

        .text-center.mb-5 p {
            font-size: 1rem;
            color: var(--text-light);
        }

        /* Contact Cards */
        .contact-card {
            background: var(--white);
            border-radius: 15px;
            box-shadow: 0 5px 25px var(--shadow);
            padding: 25px;
            text-align: center;
            transition: transform 0.3s ease;
            margin-bottom: 20px;
        }

        .contact-card:hover {
            transform: translateY(-5px);
        }

        .contact-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(212, 196, 251, 0.2);
            color: var(--lavender);
            border-radius: 50%;
            font-size: 24px;
            margin: 0 auto 15px;
            transition: all 0.3s ease;
        }

        .contact-icon:hover {
            background: var(--lavender);
            color: var(--white);
        }

        .contact-card h5 {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            font-weight: 500;
            color: var(--text-dark);
            margin-bottom: 10px;
        }

        .contact-card p {
            font-size: 0.9rem;
            color: var(--text-light);
            margin: 0;
        }

        /* Contact Form */
        .contact-form {
            background: var(--white);
            border-radius: 15px;
            box-shadow: 0 5px 25px var(--shadow);
            padding: 30px;
        }

        .contact-form h4 {
