<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlowBeauty - Skincare & Cosmetics</title>
    <%-include("../partials/user/navbar.ejs")%>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <style>
        /* GlowBeauty - Premium Cosmetics & Skincare Theme */

/* Global Styles */
:root {
  --primary-color: #f8b3c5;
  --secondary-color: #ffeeee;
  --accent-color: #d96c94;
  --dark-color: #4a3a44;
  --light-color: #fff9fa;
  --font-primary: 'Playfair Display', serif;
  --font-secondary: 'Montserrat', sans-serif;
  --transition: all 0.3s ease;
  --shadow: 0 8px 20px rgba(212, 175, 188, 0.2);
}

body {
  color: #535353;
  background-color: var(--light-color);
  line-height: 1.7;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-primary);
  font-weight: 500;
}

/* Navbar Styling */
.navbar {
  background-color: rgba(255, 255, 255, 0.95) !important;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
  padding: 12px 0;
}

.navbar-brand {
  font-family: var(--font-primary);
  font-size: 1.8rem;
  color: var(--accent-color) !important;
  letter-spacing: 1px;
}

.nav-link {
  font-size: 0.9rem;
  letter-spacing: 0.5px;
  margin: 0 10px;
  position: relative;
  color: var(--dark-color) !important;
  transition: var(--transition);
}

.nav-link:after {
  content: '';
  position: absolute;
  bottom: -3px;
  left: 0;
  width: 0;
  height: 2px;
  background-color: var(--accent-color);
  transition: var(--transition);
}

.nav-link:hover:after, .nav-link.active:after {
  width: 100%;
}

/* Hero Section */
.hero-section {
  position: relative;
  min-height: 700px;
  display: flex;
  align-items: center;
  overflow: hidden;
  background-color: var(--secondary-color);
}

.hero-background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--secondary-color) 0%, #ffd8e3 100%);
  clip-path: polygon(0 0, 55% 0, 45% 100%, 0% 100%);
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 45%;
  padding-left: 50px;
}

.header-title {
  font-size: 4rem;
  font-weight: 400;
  line-height: 1.2;
  margin-bottom: 1.5rem;
  color: var(--dark-color);
  font-family: var(--font-primary);
}

.hero-content .lead {
  font-size: 1.2rem;
  color: var(--accent-color);
  margin-bottom: 2rem;
  font-weight: 500;
}

.hero-image {
  position: absolute;
  right: 0;
  top: 0;
  width: 65%;
  height: 100%;
  z-index: 1;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(1.05);
}

.hero-image:before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255, 238, 238, 0.8) 0%, rgba(255, 238, 238, 0) 30%);
  z-index: 2;
}

.btn-shop-now {
  background: linear-gradient(to right, var(--accent-color), #e988ab);
  color: white;
  padding: 12px 35px;
  border-radius: 50px;
  border: none;
  font-size: 1rem;
  letter-spacing: 1px;
  text-transform: uppercase;
  font-weight: 500;
  box-shadow: 0 5px 15px rgba(217, 108, 148, 0.3);
  transition: var(--transition);
}

.btn-shop-now:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(217, 108, 148, 0.5);
  background: linear-gradient(to right, #e988ab, var(--accent-color));
  color: white;
}

/* Categories Section */
.category-section {
  background-color: #fff;
  padding: 6rem 0;
}

.section-title {
  font-family: var(--font-primary);
  font-size: 2.5rem;
  text-align: center;
  margin-bottom: 3rem;
  color: var(--dark-color);
  position: relative;
}

.section-title:after {
  content: '';
  display: block;
  width: 80px;
  height: 3px;
  background: linear-gradient(to right, var(--primary-color), var(--accent-color));
  margin: 1rem auto;
  border-radius: 3px;
}

.category-img {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 1.5rem;
  box-shadow: var(--shadow);
  border: 5px solid #fff;
  transition: var(--transition);
}

.category-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition);
}

.category-img:hover {
  transform: scale(1.05);
  box-shadow: 0 10px 25px rgba(212, 175, 188, 0.4);
}

.category-img:hover img {
  transform: scale(1.1);
}

/* Banner Section */
.banner-card {
  position: relative;
  overflow: hidden;
  border-radius: 15px;
  height: 350px;
  margin-bottom: 2rem;
  box-shadow: var(--shadow);
  transition: var(--transition);
}

.banner-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition);
}

.banner-card:hover img {
  transform: scale(1.05);
}

.banner-content {
  position: absolute;
  bottom: 30px;
  left: 30px;
  background: rgba(255, 255, 255, 0.95);
  padding: 20px 30px;
  border-radius: 10px;
  max-width: 80%;
  box-shadow: var(--shadow);
  transition: var(--transition);
}

.banner-card:hover .banner-content {
  transform: translateY(-5px);
}

.banner-content h3 {
  color: var(--accent-color);
  margin-bottom: 10px;
  font-size: 1.5rem;
}

/* Product Cards */
.trending-section {
  background-color: var(--secondary-color);
  padding: 6rem 0;
}

.product-card {
  border: none;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: var(--transition);
  background-color: #fff;
  margin-bottom: 2rem;
}

.product-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(212, 175, 188, 0.3);
}

.product-card img {
  height: 280px;
  object-fit: cover;
  transition: var(--transition);
}

.product-card:hover img {
  transform: scale(1.05);
}

.product-card .card-body {
  padding: 1.5rem 1rem;
}

.product-card .card-title {
  font-weight: 500;
  font-size: 1.1rem;
  color: var(--dark-color);
  margin-bottom: 0.5rem;
}

.product-price {
  color: var(--accent-color);
  font-weight: 600;
  font-size: 1.2rem;
}

/* Add to cart button */
.btn-add-cart {
  background-color: #fff;
  color: var(--accent-color);
  border: 2px solid var(--accent-color);
  border-radius: 50px;
  padding: 8px 20px;
  font-size: 0.9rem;
  transition: var(--transition);
  margin-top: 10px;
}

.btn-add-cart:hover {
  background-color: var(--accent-color);
  color: #fff;
}

/* Testimonials */
.testimonial-section {
  padding: 6rem 0;
  background-color: #fff;
}

.testimonial-card {
  background: linear-gradient(to bottom right, #fff, #fff9fa);
  padding: 30px;
  border-radius: 15px;
  box-shadow: var(--shadow);
  transition: var(--transition);
  height: 100%;
  position: relative;
}

.testimonial-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(212, 175, 188, 0.3);
}

.testimonial-card:before {
  content: '"';
  position: absolute;
  top: 20px;
  left: 20px;
  font-size: 4rem;
  color: var(--primary-color);
  opacity: 0.2;
  font-family: serif;
}

.testimonial-card p {
  font-style: italic;
  color: #666;
  font-size: 1.1rem;
  line-height: 1.8;
  margin-top: 1rem;
}

.testimonial-card img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid #fff;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
}

.testimonial-card h6 {
  color: var(--dark-color);
  font-weight: 600;
}

.testimonial-card small {
  color: var(--accent-color);
}

/* Footer */
footer {
  background-color: var(--dark-color);
  color: #ccc;
  padding: 4rem 0 1rem;
}

.footer-heading {
  color: var(--primary-color);
  font-family: var(--font-primary);
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
}

.footer-link {
  color: #ccc;
  transition: var(--transition);
  display: block;
  margin-bottom: 0.8rem;
  text-decoration: none;
}

.footer-link:hover {
  color: var(--primary-color);
  transform: translateX(5px);
}

.social-icons a {
  color: #fff;
  background-color: rgba(255, 255, 255, 0.1);
  width: 36px;
  height: 36px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-right: 10px;
  transition: var(--transition);
}

.social-icons a:hover {
  background-color: var(--accent-color);
  transform: translateY(-3px);
}

.newsletter-input {
  border-radius: 50px;
  border: none;
  padding: 10px 20px;
}

.btn-subscribe {
  background-color: var(--accent-color);
  color: white;
  border-radius: 50px;
  padding: 10px 25px;
  border: none;
  font-weight: 500;
  transition: var(--transition);
}

.btn-subscribe:hover {
  background-color: #c25a7d;
}

.copyright {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1.5rem;
  margin-top: 3rem;
  font-size: 0.9rem;
}

/* Responsive Adjustments */
@media (max-width: 1200px) {
  .header-title {
    font-size: 3.5rem;
  }
}

@media (max-width: 991px) {
  .hero-content {
    max-width: 100%;
    padding: 3rem 2rem;
    text-align: center;
  }

  .hero-background {
    clip-path: none;
    background: var(--secondary-color);
  }

  .hero-image {
    position: relative;
    width: 100%;
    height: 400px;
    margin-top: 2rem;
  }

  .hero-image:before {
    background: linear-gradient(to top, rgba(255, 238, 238, 0.8) 0%, rgba(255, 238, 238, 0) 50%);
  }

  .header-title {
    font-size: 3rem;
  }
}

@media (max-width: 767px) {
  .category-img {
    width: 120px;
    height: 120px;
  }

  .banner-content {
    left: 15px;
    bottom: 15px;
    padding: 15px;
    max-width: 90%;
  }

  .banner-content h3 {
    font-size: 1.2rem;
  }

  .section-title {
    font-size: 2rem;
  }

  .product-card img {
    height: 220px;
  }
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animated {
  animation: fadeIn 0.8s ease-out forwards;
}

/* Add elegant hover effects */
.hover-glow:hover {
  box-shadow: 0 0 20px rgba(217, 108, 148, 0.4);
}
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background"></div>
        <div class="container">
            <div class="hero-content">
                <h1 class="header-title">Be Your Own Kind<br>Of Beautiful</h1>
                <p class="lead mb-4">Natural cosmetics for every skin</p>
                <button  id="shopNowBtn" class="btn btn-shop-now">Shop Now</button>
            </div>
            <div class="hero-image">
                <img src="/images/mainBanner.jpg" alt="Woman applying skincare product">
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="category-section">
        <div class="container">
            <h2 class="section-title">Top Categories</h2>
            <div class="row g-4">
                <% for (let i = 0; i < products.length && i < 3; i++) { %>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="category-img">
                                <img src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                                     alt="<%= products[i].productName %>">
                            </div>
                            <h5><%= products[i].productName %></h5>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Banner Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <% for (let i = 3; i < products.length && i < 5; i++) { %>
                    <div class="col-md-6">
                        <div class="banner-card">
                            <img src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                                 alt="<%= products[i].productName %>">
                            <div class="banner-content">
                                <h3><%= products[i].productName %></h3>
                                <button     id="shopNowBtn2" class="btn btn-shop-now mt-2">Shop Now</button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
    


    <section class="trending-section bg-light">
        <div class="container">
            <h2 class="section-title">Trending Products</h2>
            <div class="row g-4">
                <% for(let i = 0; i < Math.min(products.length, 8); i++) { %>
                    <div class="col-md-3">
                        <div class="card product-card">
                          <a href="/product-details?id=<%= products[i]._id %>" class="product-card"></a>
                            <img src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                                 alt="<%= products[i].productName %>" 
                                 class="card-img-top">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= products[i].productName %></h5>
                                <p class="product-price">₹<%= products[i].salePrice %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>


    <!-- Special Products -->
   

    <!-- Testimonials -->
   
    <%-include("../partials/user/footer.ejs")%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        window.addEventListener('scroll', function() {
            document.querySelectorAll('.product-card').forEach(card => {
                const rect = card.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom >= 0) {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }
            });
        });

        document.getElementById("shopNowBtn").addEventListener("click", function() {
        window.location.href = "shop";
    });
    document.getElementById("shopNowBtn2").addEventListener("click", function() {
        window.location.href = "shop";
    });
    </script>
</body>
</html>