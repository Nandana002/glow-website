<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GlowGazey - Referral Program</title>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }
        
        /* Body and Main Container */
        body {
            background-color: #f7f8f9;
            color: #333;
            font-size: 16px;
            display: flex;
            min-height: 100vh;
            position: relative;
        }
        
        /* Navbar inherited from your original code */
        /* keeping this as is */
        
        /* Sidebar Styling */
        .sidebar {
            width: 260px;
            background-color: #ff5e5b;
            height: 100vh;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            z-index: 900;
        }
        
        /* Sidebar Links */
        .menu-item {
            color: white;
            font-size: 18px;
            text-decoration: none;
            padding: 15px 20px;
            margin: 10px 0;
            display: block;
            transition: background-color 0.3s ease;
            border-radius: 8px;
            font-weight: bold;
        }
        
        .menu-item:hover {
            background-color: #f4a7a5;
        }
        
        .menu-item.active {
            background-color: #d85d5b;
        }
        
        /* Main Content */
        .container {
            display: flex;
            margin-left: 260px;
            width: calc(100% - 260px);
        }
        
        .content {
            flex: 1;
            padding: 20px;
        }
        
        /* Referral Page Styling */
        .referral-container {
            max-width: 1000px;
            padding: 20px;
        }
        
        .card {
            border-radius: 15px;
            border: none;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            margin-bottom: 25px;
            overflow: hidden;
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #f0f0f0;
            padding: 20px 25px;
        }
        
        .card-header h4, .card-header h5 {
            color: #ff5e5b;
            font-weight: 600;
        }
        
        .referral-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: #ff5e5b;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto 20px;
        }
        
        .social-share {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 25px 0;
        }
        
        .social-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            cursor: pointer;
            transition: transform 0.3s ease;
        }
        
        .social-icon:hover {
            transform: scale(1.1);
        }
        
        .facebook {
            background-color: #3b5998;
        }
        
        .twitter {
            background-color: #1da1f2;
        }
        
        .whatsapp {
            background-color: #25d366;
        }
        
        .email {
            background-color: #ff5e5b;
        }
        
        .referral-input {
            font-size: 18px;
            font-weight: 600;
            letter-spacing: 1px;
            max-width: 250px;
            background-color: #f8f8f8;
        }
        
        .stats-card {
            text-align: center;
            padding: 10px;
            transition: transform 0.3s ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .step-card {
            text-align: center;
            padding: 25px 15px;
            height: 100%;
            position: relative;
            transition: transform 0.3s ease;
        }
        
        .step-card:hover {
            transform: translateY(-5px);
        }
        
        .step-number {
            width: 40px;
            height: 40px;
            background-color: #ff5e5b;
            color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            font-weight: bold;
            margin: 0 auto 15px;
        }
        
        .referral-table {
            background-color: white;
            border-radius: 10px;
        }
        
        .referral-table th {
            color: #ff5e5b;
            font-weight: 600;
        }
        
        .btn-primary {
            background-color: #ff5e5b;
            border-color: #ff5e5b;
        }
        
        .btn-primary:hover {
            background-color: #d85d5b;
            border-color: #d85d5b;
        }
        
        .text-primary {
            color: #ff5e5b !important;
        }
        
        /* Additional styling for profile side */
        .profileSide {
            display: none; /* Hide by default on mobile */
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .sidebar {
                width: 220px;
            }
            
            .container {
                margin-left: 220px;
            }
        }
        
        @media (max-width: 480px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                box-shadow: none;
            }
            
            .container {
                margin-left: 0;
                width: 100%;
                flex-direction: column;
            }
            
            .referral-container {
                padding: 10px;
            }
            
            .social-share {
                flex-wrap: wrap;
            }
        }
    </style>
</head>

<body>
    <div class="referral-container">
        <%- include("../partials/user/navbar.ejs") %>
        <%- include("../partials/user/profileSide.ejs") %>
        
        <div class="container">
            <!-- Keep your sidebar structure -->
            <nav class="sidebar">
                <a href="/home" class="menu-item">Home</a>
                <a href="/myaccount" class="menu-item">Dashboard</a>
                <a href="/orders" class="menu-item">Orders</a>
                <a href="/wallet" class="menu-item">Wallet</a>
                <a href="/referal" class="menu-item active">Referal</a>
                <a href="/getAddress" class="menu-item">My Address</a>
            </nav>
            
            <div class="content">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">Share & Glow Referral Program</h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="referral-icon">
                                <i class="fas fa-gift fa-2x text-white"></i>
                            </div>
                            <h3>Invite Friends & Earn Beauty Rewards</h3>
                            <p class="text-muted">Refer your friends and earn ₹100 in store credit for each successful sign-up!</p>
                        </div>
                    
                        <div class="social-share">
                            <div class="social-icon facebook" onclick="shareOnFacebook()">
                                <i class="fab fa-facebook-f"></i>
                            </div>
                            <div class="social-icon twitter" onclick="shareOnTwitter()">
                                <i class="fab fa-twitter"></i>
                            </div>
                            <div class="social-icon whatsapp" onclick="shareOnWhatsapp()">
                                <i class="fab fa-whatsapp"></i>
                            </div>
                            <div class="social-icon email" onclick="shareViaEmail()">
                                <i class="fas fa-envelope"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="text-center py-4">
                            <h6 class="mb-3">Your Referral Code</h6>
                            <div class="d-flex justify-content-center align-items-center gap-2 mb-4">
                                <input type="text" id="referralCodeInput" class="form-control text-center referral-input" value="<%= user.referralCode %>" readonly>
                                <button class="btn btn-primary btn-small" onclick="copyReferralCode()">Copy</button>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <div class="card stats-card h-100">
                                        <div class="card-body">
                                            <i class="fas fa-coins fa-2x text-primary mb-3"></i>
                                            <h3 class="text-primary">₹<%= user.referralRewards %></h3>
                                            <p class="mb-0 text-muted">Total Rewards Earned</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card stats-card h-100">
                                        <div class="card-body">
                                            <i class="fas fa-users fa-2x text-success mb-3"></i>
                                            <h3 class="text-success"><%= user.referralCount %></h3>
                                            <p class="mb-0 text-muted">Friends Referred</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                        <div class="referral-steps">
                            <h5 class="text-center mb-4">How It Works</h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="card step-card">
                                        <div class="step-number">1</div>
                                        <h6>Share Your Link</h6>
                                        <p class="small text-muted">Send your unique referral link to friends</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card step-card">
                                        <div class="step-number">2</div>
                                        <h6>Friend Signs Up</h6>
                                        <p class="small text-muted">They create an account using your link</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card step-card">
                                        <div class="step-number">3</div>
                                        <h6>Both Get Rewards</h6>
                                        <p class="small text-muted">You both receive ₹100 in your wallet!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Referred Users List (keeping your EJS logic) -->
                <% if (user.referrals && user.referrals.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">My Referrals</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mt-4">
                            <h6 class="mb-3">Referred Users</h6>
                            <div class="table-responsive">
                                <table class="table referral-table">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>Joined Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% user.referrals.forEach(referral => { %>
                                        <tr>
                                            <td><%= referral.name %></td>
                                            <td><%= new Date(referral.createdAt).toLocaleDateString() %></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyReferralCode() {
            const referralCodeInput = document.getElementById('referralCodeInput');
            referralCodeInput.select();
            document.execCommand('copy');
            alert('Referral code copied to clipboard!');
        }

        function shareOnFacebook() {
            let url = encodeURIComponent(window.location.href);
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank');
        }

        function shareOnTwitter() {
            let url = encodeURIComponent(window.location.href);
            let text = encodeURIComponent("Check this out!");
            window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
        }

        function shareOnWhatsapp() {
            let url = encodeURIComponent(window.location.href);
            let text = encodeURIComponent("Check this out!");
            window.open(`https://api.whatsapp.com/send?text=${text} ${url}`, '_blank');
        }

        function shareViaEmail() {
            let subject = encodeURIComponent("Check this out!");
            let body = encodeURIComponent(`I found this interesting: ${window.location.href}`);
            window.location.href = `mailto:?subject=${subject}&body=${body}`;
        }
    </script>
</body>
</html>