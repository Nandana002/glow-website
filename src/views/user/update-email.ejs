<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Email</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha3/css/bootstrap.min.css">
    <style>
        body {
    background-color: #f8f6f3; /* Soft beige background */
    font-family: 'Poppins', sans-serif;
    color: #5a5a5a;
}

.card-login {
    margin-top: 140px;
    margin-bottom: 80px;
    background-color: #ffffff; /* White card background */
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    padding: 20px;
}

.card-title {
    color: #3a3a3a;
    font-weight: 600;
    text-align: center;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #d1cfc7;
    padding: 10px;
    transition: border-color 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #d4a373; /* Warm brown accent */
    box-shadow: 0 0 8px rgba(212, 163, 115, 0.5);
}

.error-message {
    color: #e63946;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.is-invalid {
    border-color: #e63946;
    background-color: #ffe6e6;
}

.login-button {
    width: 100%;
    padding: 12px;
    background-color: #d4a373; /* Warm cosmetic brown */
    color: #ffffff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s ease-in-out;
}

.login-button:hover {
    background-color: #b5835a; /* Slightly darker brown on hover */
}

p.text-center a {
    color: #b5835a;
    font-weight: 500;
    text-decoration: none;
}

p.text-center a:hover {
    text-decoration: underline;
}

        .error-message {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .is-invalid {
            border-color: red;
        }

        .card-login {
            margin-top: 140px;
            margin-bottom: 80px;
        }
        .login-button {
            width: 100%;
            padding: 12px;
            background-color: #F3F2EE;
            color: rgb(11, 11, 11);
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>Update Email</h2>
        <% if (message) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <form id="updateEmailForm" method="POST" action="/update-email">
            <div class="mb-3">
                <label for="email" class="form-label">New Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn btn-primary">Update Email</button>
        </form>
    </div>

    <script>
        document.getElementById('updateEmailForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;

            fetch('/update-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/update-email';
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>