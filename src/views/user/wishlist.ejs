}

/* Add makeup-inspired details */
.product-price::before {
    content: "â™¡";
    position: absolute;
    left: -25px;
    top: 0;
    color: var(--primary-color);
    font-size: 0.9rem;
}

.product-price::after {
    content: "â™¡";
    position: absolute;
    right: -25px;
    top: 0;
    color: var(--primary-color);
    font-size: 0.9rem;
}
