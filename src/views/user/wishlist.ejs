<body>
    <%- include("../partials/user/navbar.ejs") %>
        <main class="main">
            <div class="page-header breadcrumb-wrap">
                <div class="container">
                    <div class="breadcrumb">
                        <a href="/home" rel="nofollow"><i class="fas fa-home mr-2"></i>Home</a>
                        <span></span>
                        <a href="/shop" rel="nofollow">Shop</a>
                        <span></span>
                        <a href="/wishlist" rel="nofollow">My Wishlist</a>
                    </div>
                </div>
            </div>

            <div id="notification" class="notification" role="alert">
                <div class="notification-content">
                    <div class="notification-message">
                        <i class="fas fa-check-circle"></i>
                        <span id="notification-message"></span>
                    </div>
                    <button onclick="hideNotification()" class="close-notification"
                        aria-label="Close notification">Ã—</button>
                </div>
            </div>

            <section class="mt-50 mb-50">
                <div class="container">
                    <h2 class="page-title"><span>My Wishlist</span></h2>
                    <div class="row">
                        <div class="col-12">
                            <div class="wishlist-container">
                                <div class="table-responsive">
                                    <table class="table shopping-summery text-center clean">
                                        <% if (wishlist && wishlist.length > 0) { %>
                                            <thead>
                                                <tr class="main-heading">
                                                    <th scope="col">Image</th>
                                                    <th scope="col">Product</th>
                                                    <th scope="col">Price</th>
                                                    <th scope="col">Shade</th>
                                                    <th scope="col">Add to Cart</th>
                                                    <th scope="col">Remove</th>
                                                </tr>
                                            </thead>
                                        <% } %>
                                        <tbody>
                                            <% if (wishlist && wishlist.length > 0) { %>
                                                <% for (let item of wishlist) { %>
                                                    <% if (item.productId) { %>
                                                        <tr>
                                                            <td class="image product-thumbnail" data-title="Product">
                                                                <img src="/uploads/re-image/<%= item.productId.productImage[0] %>" />
                                                            </td>
                                                            <td class="product-des product-name" data-title="Description">
                                                                <h5 class="product-name">
                                                                    <a href="/productDetails/<%= item.productId._id %>">
                                                                        <%= item.productId.productName %>
                                                                    </a>
                                                                </h5>
                                                                <p class="product-category font-xs">
                                                                    <%= item.productId.category.name %>
                                                                </p>
                                                            </td>
                                                            <td class="price product-price" data-title="Price">â‚¹<span>
                                                                    <%= item.productId.salePrice %>
                                                                </span></td>
                                                            <td data-title="Shade">
                                                                <div class="shade-selection">
                                                                    <h3 class="section-title">Select Shade</h3>
                                                                    <div class="shade-options">
                                                                        <% if (item.productId.shadeVariants && item.productId.shadeVariants.length > 0) { %>
                                                                            <% item.productId.shadeVariants.forEach(variant => { %>
                                                                                <button
                                                                                    class="shade-btn <%= variant.quantity === 0 ? 'disabled' : '' %>"
                                                                                    data-shade="<%= variant.shade %>"
                                                                                    data-quantity="<%= variant.quantity %>"
                                                                                    data-product-id="<%= item.productId._id %>"
                                                                                    <%= variant.quantity === 0 ? 'disabled' : '' %>>
                                                                                    <%= variant.shade %>
                                                                                </button>
                                                                            <% }); %>
                                                                        <% } else { %>
                                                                            <p>No shades available</p>
                                                                        <% } %>
                                                                    </div>
                                                                    <input type="hidden" id="selected-shade-<%= item.productId._id %>"
                                                                        name="selectedShade" value="">
                                                                    <p class="selected-shade-stock"></p>
                                                                </div>
                                                            </td>
                                                            <td class="text-center" data-title="Add to Cart">
                                                                <button onclick="addToCartFromWishlist('<%= item.productId._id %>')"
                                                                    class="btn-action btn-cart">
                                                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                                                </button>
                                                            </td>
                                                            <td class="action" data-title="Remove">
                                                                <button onclick="confirmRemove('<%= item.productId._id %>')"
                                                                    class="btn-action btn-remove">
                                                                    <i class="fas fa-trash"></i> Remove
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                <% } %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="empty-wishlist">
                                                        <i class="fas fa-heart-broken"></i>
                                                        <p>Your wishlist is empty</p>
                                                        <a href="/shop" class="btn-shop-now">Shop Now</a>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const shadeButtons = document.querySelectorAll('.shade-btn');

                shadeButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        const productId = this.getAttribute('data-product-id');
                        const shade = this.getAttribute('data-shade');
                        const quantity = this.getAttribute('data-quantity');


                        document.querySelectorAll(`.shade-btn[data-product-id="${productId}"]`).forEach(btn => {
                            btn.classList.remove('selected');
                        });


                        this.classList.add('selected');


                        document.getElementById(`selected-shade-${productId}`).value = shade;

                        const stockInfo = document.querySelector(`.selected-shade-stock[data-product-id="${productId}"]`);
                        if (stockInfo) {
                            stockInfo.textContent = `Stock: ${quantity}`;
                        }
                    });
                });
            });

            function addToCartFromWishlist(productId) {
                const selectedShade = document.getElementById(`selected-shade-${productId}`).value;

                if (!selectedShade) {
                    showNotification('Please select a shade', true);
                    return;
                }

                fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: productId,
                        shade: selectedShade,
                        quantity: 1
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.status) {
                            fetch(`/removeFromWishlist?productId=${productId}`)
                                .then(() => {
                                    showNotification('Product added to cart successfully!');
                                    setTimeout(() => {
                                        window.location.reload();
                                    }, 2000);
                                });
                        } else {
                            showNotification(data.message || 'Error adding product to cart', true);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showNotification('Error adding product to cart', true);
                    });
            }

            function confirmRemove(productId) {
                Swal.fire({
                    title: "Remove from Wishlist?",
                    text: "This item will be removed from your wishlist",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: "#fd3758",
                    cancelButtonColor: "#6c757d",
                    confirmButtonText: "Yes, remove it",
                    cancelButtonText: "Keep it",
                    background: "#ffffff",
                    borderRadius: "15px",
                    customClass: {
                        confirmButton: "btn btn-danger px-4 py-2",
                        cancelButton: "btn btn-secondary px-4 py-2"
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/removeFromWishlist?productId=${productId}`;
                    }
                });
            }

            function showNotification(message, isError = false) {
                const notification = document.getElementById('notification');
                const messageElement = document.getElementById('notification-message');

                if (window.notificationTimeout) {
                    clearTimeout(window.notificationTimeout);
                }

                messageElement.textContent = message;

                if (isError) {
                    notification.classList.add('error-notification');
                    notification.querySelector('.notification-message i').className = 'fas fa-exclamation-circle';
                } else {
                    notification.classList.remove('error-notification');
                    notification.querySelector('.notification-message i').className = 'fas fa-check-circle';
                }

                notification.style.display = 'block';
                setTimeout(() => {
                    notification.classList.add('show');
                }, 10);

                window.notificationTimeout = setTimeout(() => {
                    hideNotification();
                }, 5000);
            }

            function hideNotification() {
                const notification = document.getElementById('notification');
                notification.classList.remove('show');
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 300);
            }
        </script>
